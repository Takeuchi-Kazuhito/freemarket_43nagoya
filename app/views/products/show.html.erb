<section class="item-container">
  <h1><%= @product.name %></h1>
  <div class="item-container__main clearfix">
    <div class="item-container__main-photo">
      <div class="item-container__main-photo-main">
        <%= image_tag @product.image %>
      </div>
      <div class="item-container__main-photo-bottom">
        <div class="item-container__main-photo-bottom-ele">
          <%= image_tag "" %>
        </div>
        <div class="item-container__main-photo-bottom-ele">
          <%= image_tag "" %>
        </div>
        <div class="item-container__main-photo-bottom-ele">
          <%= image_tag "" %>
        </div>
        <div class="item-container__main-photo-bottom-ele">
          <%= image_tag "" %>
        </div>
        <div class="item-container__main-photo-bottom-ele">
          <%= image_tag "" %>
        </div>
      </div>
    </div>
    <table class="item-container__main-table">
      <%= render "product_table" %>
    </table>
  </div>
  <div class="item-container__price">
    <span class="item-container__price-price"><%= price_format(@product.price) %></span>
    <span class="item-container__price-tax">(税込)</span>
    <span class="item-container__price-fee">
      <%= @product.shipping_burden == "exhibitor_burden" ? "送料込み" : "着払い" %>
    </span>
  </div>
  <%= link_to "購入画面に進む", "", { class: "item-container__buy" } %>
  <table class="item-container__main-table_sm">
    <%= render "product_table" %>
  </table>
  <div class="item-container__description">
    <p><%= @product.description %></p>
  </div>
  <div class="item-container__price_sm">
    <span class="item-container__price-price"><%= price_format(@product.price) %></span>
    <span class="item-container__price-tax">(税込)</span>
    <span class="item-container__price-fee">
      <%= @product.shipping_burden == "exhibitor_burden" ? "送料込み" : "着払い" %>
    </span>
  </div>
  <%= link_to "購入画面に進む", "", { class: "item-container__buy_sm" } %>
  <div class="item-container__button clearfix">
    <div class="item-container__button-left">
      <%= link_to "", { class: "item-container__button-left-like" } do %>
        <i></i>
        <span>いいね！</span>
        <span data-num="like">仮</span>
      <% end %>
      <%= link_to "", { class: "item-container__button-left-report" } do %>
        <i></i>
        <span>不適切な商品の報告</span>
      <% end %>
    </div>
    <div class="item-container__button-right">
      <%= link_to "" do %>
        <i></i>
        <span>あんしん・あんぜんへの取り組み</span>
      <% end %>
    </div>
  </div>
</section>
<ul class="item-link clearfix">
  <li class="item-link-prev">
    <% if @product.prev_id %>
      <%= link_to product_path(@product.prev_id) do %>
        <i class="fas fa-chevron-left item-link__angle"></i><%= @product.prev_id.name %>
      <% end %>
    <% end %>
  </li>
  <li class="item-link-next">
    <% if @product.next_id %>
      <%= link_to product_path(@product.next_id) do %>
        <%= @product.next_id.name %><i class="fas fa-chevron-right item-link__angle"></i>
      <% end %>
    <% end %>
  </li>
</ul>
<div class="item-social-media-box">
