.container
  = render "logo/header"
  %main.main
    %section.main__section
      %h2 商品の情報を入力
      = form_for @product, html: {class:'dropzone', id: "item-dropzone"} do |f|
        .main__section__inner
          %h3.main__section__inner__group__category
            出品画像
            %span.main__section__inner__group__category__attention 必須
          %p 画像を10枚アップロードできます
        .main__section__inner
          .main__section__inner__group
            %h3.main__section__inner__group__category
              商品名
              %span.main__section__inner__group__category__attention 必須
            = f.text_field :name, class: "main__section__inner__group__textfield", placeholder: "商品名（必須 40文字まで)"
          .main__section__inner__group
            %h3.main__section__inner__group__category
              商品の説明
              %span.main__section__inner__group__category__attention 必須
            = f.text_area :description, class: "main__section__inner__group__textarea", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
        .main__section__inner.clearfix
          %h3.main__section__inner__subCategory
            商品詳細
          .main__section__inner__form
            .main__section__inner__form__group
              %h3.main__section__inner__form__group__subCategory
                カテゴリー
                %span.main__section__inner__form__group__subCategory__attention 必須
              = f.select :status, [["レディース", "レディース"], ["メンズ", "メンズ"], ["ベビー・キッズ", "ベビー・キッズ"], ["インテリア・住まい・小物", "インテリア・住まい・小物"], ["本・音楽・ゲーム", "本・音楽・ゲーム"], ["おもちゃ・ホビー・グッズ", "おもちゃ・ホビー・グッズ"], ["コスメ・香水・美容", "コスメ・香水・美容"], ["家電・スマホ・カメラ", "家電・スマホ・カメラ"], ["スポーツ・レジャー", "スポーツ・レジャー"], ["ハンドメイド", "ハンドメイド"], ["チケット", "チケット"], ["自動車・オートバイ", "自動車・オートバイ"], ["その他", "その他"]], {include_blank: "---"}
            .main__section__inner__form__group
              %h3.main__section__inner__form__group__subCategory
                商品の状態
                %span.main__section__inner__form__group__subCategory__attention 必須
              = f.select :status, [["新品・未使用", "新品・未使用"], ["未使用に近い", "未使用に近い"], ["目立った傷や汚れなし", "目立った傷や汚れなし"], ["やや傷や汚れあり", "やや傷や汚れあり"], ["傷や汚れあり", "傷や汚れあり"], ["全体的に状態が悪い", "全体的に状態が悪い"]], {include_blank: "---"}
        .main__section__inner.clearfix
          %h3.main__section__inner__subCategory
            配送料について
          .main__section__inner__form
            .main__section__inner__form__group
              %h3.main__section__inner__form__group__subCategory
                配送料の負担
                %span.main__section__inner__form__group__subCategory__attention 必須
              = f.select :shipping_method, [["送料込み（出品者負担）", "送料込み（出品者負担）"], ["着払い（購入者負担）", "着払い（購入者負担）"]], {include_blank: "---"}
            .main__section__inner__form__group
              %h3.main__section__inner__form__group__subCategory
                発送元の地域
                %span.main__section__inner__form__group__subCategory__attention 必須
              %select.main__section__inner__form__group__select
                %option{value: ""} ---
                %option{value: "1"}
                  北海道
                %option{value: "2"}
                  青森県
                %option{value: "3"}
                  岩手県
